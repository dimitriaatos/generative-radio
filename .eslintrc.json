{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": [
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "./tsconfig.json",
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint/eslint-plugin",
		"eslint-plugin-tsdoc"
	],
	"rules": {
		"tsdoc/syntax": "warn"
	}
}